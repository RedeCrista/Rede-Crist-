<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0EB"
    android:orientation="vertical">

    <!-- Cabeçalho -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#A75A33"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REDE CRISTÃ"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- CONTEÚDO CENTRAL COM IMAGEM E TEXTO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Imagem ENVIADO ajustada sem corte -->
        <ImageView
            android:id="@+id/imgEnviado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/enviado"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp" />

        <!-- Mensagem impactante em negrito -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua fé move montanhas. Deus já recebeu sua oração."
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Botão Voltar -->
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="voltar"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:layout_margin="24dp" />
</LinearLayout>
