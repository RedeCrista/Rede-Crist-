<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom|center_horizontal"
    android:background="#F5F0EB"
    android:padding="24dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/Jesus0"
        android:scaleType="fitCenter"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem vindo, usuário!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aqui, sua fé encontra conexão. Explore versículos inspiradores, receba mensagens diárias e descubra mais sobre sua jornada espiritual. Que este espaço seja um canal de bênçãos para sua vida!"
        android:textSize="14sp"
        android:lineSpacingExtra="6dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUIZ DISCÍPULOS"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A75A33"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIA WHATSAPP"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#A75A33"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="voltar"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp" />

</LinearLayout>
